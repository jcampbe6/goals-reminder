<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.goals_reminder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.goals_reminder.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.goals_reminder.ResolutionsFragment"
            android:label="@string/title_activity_resolutions_fragment" />
        <activity
            android:name="com.example.goals_reminder.RemindersFragment"
            android:label="@string/title_activity_reminders_fragment" />
        <activity
            android:name="com.example.goals_reminder.EditGoalActivity"
            android:label="@string/title_activity_edit_goal"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.example.goals_reminder.GoalsFragment"
            android:label="@string/title_activity_goals_fragment" />
    </application>

</manifest>