<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffadadad"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/reminder_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff000000"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:text="Keep your goals top of mind.\n By setting &apos;Display Reminders&apos; to &apos;on&apos; a widget will be added to your home screen and will cycle through your goals and display each one periodically."
        android:textColor="#ffffffff"
        android:textSize="16.0sp" />

    <View
        android:id="@+id/buttonDivider_top"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="#ffffffff" />

    <LinearLayout
        android:id="@+id/reminder_toggle_row"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="#ff000000"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.07"
            android:contentDescription="@string/reminder_image_content_description"
            android:src="@drawable/ic_action_reminder" />

        <TextView
            android:id="@+id/set_reminder_textView"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.9"
            android:gravity="center_vertical"
            android:text="@string/set_reminders"
            android:textColor="#ffffffff"
            android:textSize="18.0sp" />

        <Switch
            android:id="@+id/reminder_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ff000000"
            android:paddingRight="10.0dip" />
    </LinearLayout>

</LinearLayout>